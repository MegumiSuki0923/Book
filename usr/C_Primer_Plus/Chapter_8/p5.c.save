#include <stdio.h>

int main(void)
{
	const int HIGH = 100;
	const int LOW = 1;

	int guess = 50;
	char response;

	printf("Pick an integer from 1 to 100. I will try to guess.\n");
	printf("Response with 'y' if my guess is right and with 'h' if my guess is high or 'l' if my guess is low.\n");
	printf("Is your number %d\n", guess);

	while((response = getchar()) != 'y')
	{
		if(response == 'n')
			printf("Well, then, is it %d\n", ++guess);
		else
			printf("Sorry, I understand only 'y' and 'n'\n");

		while(getchar() != '\n')
			continue;
	}

	printf("I know I could do it!\n");

	return 0;
}
